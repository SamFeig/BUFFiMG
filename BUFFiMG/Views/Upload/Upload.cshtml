@{
    ViewData["Title"] = "UploadPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color: white">UploadPage</h1>

<form method="post" action="/Upload/Upload" enctype="multipart/form-data">
    <input type="file" id="ImageUploadBox" name="image" accept=".png,.jpg,.jpeg,.gif" style="color: white" />
    <br />
    <text>Add comma-separated tags here:</text>
    <input type="text" id="Tags" name="tags" style="width: 20%" />
    <br />
    <text>Private image? (wont show up in search results)</text> @Html.CheckBox("isPrivate")
    <br />
    <input type="submit" value="Upload Image" />
</form>